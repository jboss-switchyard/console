<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.switchyard</groupId>
    <artifactId>switchyard-parent</artifactId>
    <version>0.3.0-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>switchyard-console-parent</artifactId>
  <packaging>pom</packaging>
  <name>SwitchYard: Console</name>
  <description>SwitchYard Management Console</description>

  <properties>
    <version.as7>7.0.2.Final</version.as7>
    <version.as7.console>1.0.0.Beta17</version.as7.console>
    <version.ballroom>1.0.0.Beta8</version.ballroom>
    <version.gwt.plugin>2.2.0</version.gwt.plugin>
    <version.war.plugin>2.1.1</version.war.plugin>
  </properties>

  <modules>
    <module>component</module>
    <module>gwt</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-war-plugin</artifactId>
          <version>${version.war.plugin}</version>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>gwt-maven-plugin</artifactId>
          <version>${version.gwt.plugin}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.ballroom</groupId>
        <artifactId>widgets</artifactId>
        <version>${version.ballroom}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-console-parent</artifactId>
        <version>${version.as7.console}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-parent</artifactId>
        <version>${version.as7}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

</project>
